<%= form_with model: @user do |form| %>
  <%= form.label :username, "Username:" %>
  <%= form.text_field :username, placeholder: "abc123" %>
  <%= form.label :email, "E-mail:" %>
  <%= form.email_field :email, placeholder: "domain@xyz.com" %>
  <%= form.label :password, "Password:" %>
  <%= form.password_field :password, placeholder: "supersecret123" %>
  <%= form.submit "Register" %>
<% end %>
